<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LearningTrainingController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="651.0" prefWidth="938.0">
            <children>
                <ImageView fx:id="keyboardImage" fitHeight="238.0" fitWidth="697.0" layoutX="134.0" layoutY="387.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../keyboard.png" />
                    </image>
                </ImageView>
                <Button fx:id="referenceButton" layoutX="171.0" layoutY="8.0" mnemonicParsing="false" onAction="#showReference" text="Справка" />
                <TextArea fx:id="textArea" layoutX="30.0" layoutY="56.0" prefHeight="311.0" prefWidth="883.0" />
                <Button fx:id="menuButton" layoutX="855.0" layoutY="612.0" mnemonicParsing="false" onAction="#showMenu" text="Меню" />
                <Button fx:id="startButton" layoutX="22.0" layoutY="8.0" mnemonicParsing="false" onAction="#startTraining" text="Старт" />
            <ComboBox fx:id="levelChoice" layoutX="69.0" layoutY="8.0" prefHeight="25.0" prefWidth="102.0" />
            </children>
        </AnchorPane>
    </children>
</GridPane>
